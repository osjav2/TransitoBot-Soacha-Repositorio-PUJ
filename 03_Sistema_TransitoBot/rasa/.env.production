# Production Environment Variables for Docker Compose
# RASA - Conversational AI Framework

# RASA Model Configuration
RASA_MODEL_PATH=/app/models/transito_bot.tar.gz

# Server Configuration
RASA_PORT=5005
ACTIONS_PORT=5055

# Endpoints Configuration
# Action server endpoint (updated by entrypoint script for Docker)
ACTION_ENDPOINT_URL=http://localhost:5055/webhook

# CORS Configuration
# Allow requests from frontend and other services
RASA_CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO

# NLU Configuration
NLU_LOG_LEVEL=INFO

# Training Configuration (if re-training in container)
RASA_TELEMETRY_ENABLED=false

# Session Configuration
SESSION_EXPIRATION_TIME=60

# Core Configuration
CORE_DEBUG_MODE=false
